#:kivy 1.0

<Main>
    canvas.before:
        Color:
            rgba: 1, 1, 1, .2

        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: 'Youtube Video Downloader'
        font_size: '30sp'
        size_hint: 1, .04
        pos_hint: {'y': .9, 'center_x': .5}

    Label:
        text:'Created by Gabriel Gomes! AKA Lokost'
        font_size: '15sp'
        size_hint: 1, .01
        pos_hint: {'top': .87, 'center_x':.5}

    TextInput:
        id: url
        text:'Insert here the video link!'
        halign: 'center'
        size_hint: .7, .06
        pos_hint: {'top': .8, 'center_x': .45}

    Button:
        text: 'search'
        size_hint: .1, .06
        pos_hint: {'top': .798, 'center_x': .85}
        on_release: root.get_video()

    AsyncImage:
        id: thumbnail
        source: './thumbplaceholder.jpg'
        size_hint: .8, .43
        pos_hint: {'top': .73, 'center_x': .5}

    Label:
        id: title
        text:''
        size_hint: .5,.1
        pos_hint: {'center_y': .26, 'center_x': .5}
        font_size: '20sp'

    Spinner:
        id: quality
        text: 'Quality'
        values: []
        size_hint: .55, .04
        pos_hint: {'center_y': .18, 'center_x': .5}

    Button:
        id: download
        text:'Download'
        size_hint: .25, .1
        font_size: '40sp'
        pos_hint: {'center_x': .5, 'y': .03}
        disabled: True
        on_release: root.download()